extends ../_layouts/layout.jade

block title
        |watermark

block content
        // --------------------------------------- place img
        section.img
                h1.img__title
                .img__body
        // --------------------------------------- adjustment
        section.adjust
                .adjust__title
                    h2.text Настройки

                // upload files
                .adjust__raw
                    .download
                        label.download__title Исходное изображежние
                        input.download__field(type="text")
                        input.download__button(type="button" value="dl")
                    .download
                        label.download__title Водяной знак
                        input.download__field(type="text")
                        input.download__button(type="button" value="dl")

                // place watermark
                .adjust__raw
                    .place
                        h3.place__title Положение
                        .place__body
                            .grid
                                - for (var i = 0; i < 9; i++)
                                    .grid__item grid
                            .coord
                                .coord__raw
                                    .coord__title X
                                    input.coord__field(type="text")
                                    .coord__buttons
                                        input.button__arrow.button__arrow_up(type="button" value="∧")
                                        input.button__arrow.button__arrow_down(type="button" value="∨")
                                .coord__raw
                                    .coord__title Y
                                    input.coord__field(type="text")
                                    .coord__buttons
                                        input.button__arrow.button__arrow_up(type="button" value="∧")
                                        input.button__arrow.button__arrow_down(type="button" value="∨")

                // transparent
                .adjust__raw
                    .transp
                        h3.transp__title Прозрачность
                        .transp__body

                // download result
                .adjust__raw
                    form.form
                        .form__coll
                            input.form__button(type="reset" value="Сброс")
                        .form__coll
                            input.form__button(type="submit" value="Скачать")
                    