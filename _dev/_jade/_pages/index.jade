extends ../_layouts/layout.jade

block title
        |watermark

block content
        // --------------------------------------- Picture
        section.workspace.workspace_left
            .picture
                h1.picture__title Генератор водяных знаков
                .picture__body
                    .picture__images
                        img.picture__watermark
                        img.picture__upload

        // --------------------------------------- adjustment
        section.workspace.workspace_right
            .adjust
                .adjust__title
                    h2.text Настройки
                // upload files
                .adjust__body
                    .adjust__raw
                        .upload
                            label.upload__title(for="upload_picture") Исходное изображежние
                            input.upload__field#upload_picture(type="file",name="upload")
                        .upload
                            label.upload__title(for="upload_watermark") Водяной знак
                            input.upload__field#upload_watermark(type="file",name="upload")

                    // place watermark
                    .adjust__raw
                        .place
                            h3.place__title Положение
                            .place__body
                                // grid
                                .grid
                                    - for (var i = 0; i < 9; i++)
                                        - var j = i +1
                                        .grid__item(class="grid__item_"+j)
                                // coordinate
                                .coord
                                    .coord__raw
                                        label.coord__title(for="x_coordinate") X
                                        input.coord__field#x_coordinate(type="text")
                                        .coord__buttons
                                            input.coord__arrow.coord__arrow_up(type="button" value="∧")
                                            input.coord__arrow.coord__arrow_down(type="button" value="∨")
                                    .coord__raw
                                        label.coord__title(for="x_coordinate") Y
                                        input.coord__field#x_coordinate(type="text")
                                        .coord__buttons
                                            input.coord__arrow.coord__arrow_up(type="button" value="∧")
                                            input.coord__arrow.coord__arrow_down(type="button" value="∨")

                    // transparent
                    .adjust__raw
                        .transparent
                            h3.transparent__title Прозрачность
                            .transparent__body

                    // download result
                    .adjust__raw
                        form.form
                            .form__coll
                                input.form__button(type="reset" value="Сброс")
                            .form__coll
                                input.form__button(type="submit" value="Скачать")